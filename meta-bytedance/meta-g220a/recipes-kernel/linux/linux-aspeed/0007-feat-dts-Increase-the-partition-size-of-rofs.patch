From 52d574a758e95e0e5069aaea8cf16a0ce7cf9aae Mon Sep 17 00:00:00 2001
From: lixc <xichao@sina.cn>
Date: Fri, 14 Jun 2024 17:40:03 +0800
Subject: [PATCH] feat(dts): Increase the partition size of rofs.

---
 arch/arm/boot/dts/aspeed/openbmc-flash-layout-64.dtsi | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/arch/arm/boot/dts/aspeed/openbmc-flash-layout-64.dtsi b/arch/arm/boot/dts/aspeed/openbmc-flash-layout-64.dtsi
index 7af41361c480..5b6e2425dc82 100644
--- a/arch/arm/boot/dts/aspeed/openbmc-flash-layout-64.dtsi
+++ b/arch/arm/boot/dts/aspeed/openbmc-flash-layout-64.dtsi
@@ -24,12 +24,12 @@ kernel@100000 {
 	};
 
 	rofs@a00000 {
-		reg = <0xa00000 0x2000000>; // 32MB
+		reg = <0xa00000 0x2600000>; // 38MB
 		label = "rofs";
 	};
 
 	rwfs@2a00000 {
-		reg = <0x2a00000 0x1600000>; // 22MB
+		reg = <0x3000000 0x1000000>; // 16MB
 		label = "rwfs";
 	};
 };
